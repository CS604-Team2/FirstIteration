import org.junit.Test;

public class testuser {

  //@Test
	 public void testSaveUser() throws Exception {
	  User user = new User("Paolo", "de", "Lucini", 
			  "apt 10 church st", "new haven", "CT", "09845", 
			  "paoloLucini", "luciniP123", "plucini@yahoo.com", 
			  "roma", "palermo", "pausini");
	  DataAccess save = new DataAccess();
	  save.saveUser(user);
	 }

//-------TEST ADD-------------------------------
		@Test
		public void testAdd() {
			User tester = new User();
			//read the initial size of the array list
			assertEquals(0,tester.ArrayListUser.size());
			//test if the following value is added
			tester.add ("Priya", "Suresh", "Aswani", 
					  "99 knollwood drive", "bethel", "CT", "06801", 
					  "aaswani", "Wilds123", "priyaaswani2006@yahoo.com", 
					  "delhi", "camry", "toyota");
			assertEquals(1, tester.ArrayListUser.size());
			//test if the same value cannot be added - duplicate.
			tester.add("Priya", "Suresh", "Aswani", 
					  "99 knollwood drive", "bethel", "CT", "06801", 
					  "aaswani", "Wilds123", "priyaaswani2006@yahoo.com", 
					  "delhi", "camry", "toyota");
			assertEquals(1, tester.ArrayListUser.size());
		}
}